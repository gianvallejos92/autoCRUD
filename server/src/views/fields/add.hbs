<div></div>
  <h2>Nuevo Field:</h2>
  <form action="/field/add/{{objectId}}" method="post">
    <div>
      <label for="Name">Nombre</label>
      <input type="text" name="Name" id="Name" required>
    </div>
    <div>
      <label for="API_Name">Nombre API</label>
      <input type="text" name="API_Name" id="API_Name">
    </div>
    <div>
      <label for="type">Type</label>
      <select name="type" id="type">
        <option value="text">text</option>
        <option value="int">int</option>
        <option value="decimal">decimal</option>
        <option value="date">date</option>
        <option value="datetime">datetime</option>
      </select>
    </div>
    <div>
      <label for="isRequired">Â¿Requerido?</label>
      <input type="checkbox" name="required" id="required">
    </div>
    <div class="mt-3 mb-3">
      <button class="btn btn-secondary">Crear Objeto</button>
    </div>
  </form>
  <div class="mt-3">
    <a href="/field/list/{{objectId}}" class="btn btn-info">Back Fields</a>
  </div>
</div>