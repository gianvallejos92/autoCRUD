<div class="">
  <h1>Fields of Object {{objectName}}</h1>
  {{#if fields}}
    <div class="mb-3 mt-3">
        <a href="/field/add/{{objectId}}" class="btn btn-info">Create new Field</a>
        <a href="/object/list" class="btn btn-info">Back to Object</a>
    </div>
    <div>
       <table class="table text-center">
          <thead>
              <tr class="table-dark">
                  <th scope="col" class="col-4">Field</th>
                  <th scope="col">Type</th>
                  <th scope="col">Not Required</th>
                  <th scope="col">Acciones</th>
              </tr>
          </thead>
          <tbody>
              {{#each fields}}
                  <tr>
                      <td>{{Field}}</td>
                      <td>{{Type}}</td>
                      <td>{{Null}}</td>
                      <td>
                          <div class="btn-group">
                              <a href="/field/edit/{{objectId}}/{{id}}" class="btn btn-warning p-2">
                              <i class="fa-solid fa-pencil"></i></a>
                              <a href="#" class="btn btn-danger p-2">
                              <i class="fa-solid fa-trash"></i></a>
                          </div>
                      </td>
                  </tr>
              {{/each}}
          </tbody>
      </table>
    </div>
  {{else}}
    <h2>No fields in the data base</h2>
    <a href="/field/add/{{objectId}}" class="btn btn-info">Create new Field</a>
    <a href="/object/list" class="btn btn-info">Back to Object</a>
  {{/if}}
</div>